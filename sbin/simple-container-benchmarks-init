#!/bin/bash

# start our node server, regardless of whether we're running in client or server mode
node /server/server.js &

# if we don't have a target var, then we're running in server mode
# ...so start iperf, otherwise we start the client script
if [[ ! -n "$TARGET" ]]
then
	iperf -s
else
	/usr/local/sbin/simple-container-benchmarks
fi
